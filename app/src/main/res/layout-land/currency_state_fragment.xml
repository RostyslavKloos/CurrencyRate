<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_mainLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/tv_viewColorStatePB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_viewColorStateNBU"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />

                <TableLayout
                    android:id="@+id/tl_privatBank"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp">

                    <TableRow android:padding="10dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/Privat_Bank"
                            android:layout_weight="1"
                            android:gravity="center_vertical"/>

                        <ImageButton
                            android:id="@+id/ib_datePickerPB"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_column="1"
                            android:backgroundTint="@color/white"                            android:layout_gravity="end"
                            android:contentDescription="@string/date_picker_pb"
                            android:src="@drawable/ic_baseline_calendar_today_24" />

                        <TextView
                            android:id="@+id/tv_datePB"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="end"
                            android:layout_column="2"
                            android:gravity="center_vertical"
                            />

                    </TableRow>

                        <TextView
                            android:id="@+id/tv_hintPB"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:hint="@string/hintOnErrorData"
                            android:textAlignment="center"
                            android:visibility="gone"
                            />

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#F0F7F7"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/Currency"
                            android:textAlignment="center" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/Purchase"
                            android:textAlignment="center" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/Sale"
                            android:textAlignment="center" />
                    </TableRow>

                    <ProgressBar
                        android:id="@+id/pb_progressBarPB"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone" />
                </TableLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_linearLayoutNBU"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TableLayout
                    android:id="@+id/tl_NationalBankHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp">

                    <TableRow android:padding="10dp">

                        <TextView
                            android:id="@+id/tv_test"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:gravity="center_vertical"
                            android:text="@string/NBU" />

                        <ImageButton
                            android:id="@+id/ib_datePickerNBU"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:backgroundTint="@color/white"
                            android:contentDescription="@string/date_picker_nbu"
                            android:src="@drawable/ic_baseline_calendar_today_24" />

                        <TextView
                            android:id="@+id/tv_dateNBU"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical" />
                    </TableRow>

                    <TextView
                        android:id="@+id/tv_hintNBU"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:hint="@string/hintOnErrorData"
                        android:textAlignment="center"
                        android:visibility="gone" />
                </TableLayout>

                <ProgressBar
                    android:id="@+id/pb_progressBarNBU"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />

                <ScrollView
                    android:id="@+id/sv_scrollViewNBU"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:visibility="invisible">

                    <TableLayout
                        android:id="@+id/tl_NationalBank"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp">

                    </TableLayout>
                </ScrollView>
            </LinearLayout>
        </LinearLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</androidx.constraintlayout.widget.ConstraintLayout>